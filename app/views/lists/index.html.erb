<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://rachelsreviews.net/wp-content/uploads/2016/06/film.jpg)">
  All my film lists
</div>

<div class = "container">
  <div class = "btn btn-flat">
    <%= link_to "Add a list", new_list_path %>
  </div>

  <div class = "cards">
    <% @lists.each do |list| %>
      <div class = card>
        <%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>
        <%= link_to list.name, list_path(list)%>
        <%= link_to "delete", list_path(list), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }%>
      </div>
    <% end %>
  </div>
</div>
